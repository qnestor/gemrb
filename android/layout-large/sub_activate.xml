<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Wrapper" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
	
    <ImageView
        android:id="@+id/big_top_image"
        android:layout_width="320sp"
        android:layout_height="320sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/hello_world"
        />
    
    <TextView
        android:id="@+id/game_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/big_top_image"
        android:layout_alignParentTop="true"
        android:text="@string/game_name" />
    <EditText
        android:id="@+id/game_name_textbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/game_name_text"
        android:layout_alignRight="@+id/small_bot_image"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/game_name_text"
        android:ems="10"
        android:inputType="text" >
    </EditText>
    
    <Spinner
        android:id="@+id/spinner_top_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/top_button"
        android:layout_below="@id/game_name_textbox"
        android:layout_alignLeft="@+id/game_name_textbox"
        android:layout_alignRight="@+id/game_name_textbox"
        android:prompt="@string/no_game"
        android:entries="@array/game_type"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/top_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/game_name_text"
        android:layout_alignBottom="@id/spinner_top_button"
        android:layout_below="@id/game_name_text"
        android:layout_alignRight="@id/game_name_text"
        android:text="@string/game_type"
        android:gravity="center"
        />
    
    <Button 
        android:id="@+id/below_top_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/game_name_text"
        android:layout_below="@id/top_button"
        android:text="@string/game_dir"
        android:layout_alignRight="@id/game_name_text"
        />
    <TextView
        android:id="@+id/text_below_top_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/below_top_button"
        android:layout_below="@id/spinner_top_button"
        android:layout_alignRight="@+id/game_name_textbox"
        android:layout_alignBottom="@id/below_top_button"
        android:layout_alignLeft="@+id/game_name_textbox"
        android:text="@string/no_gamepath"
        android:gravity="center"
        />
    
      <Button 
        android:id="@+id/below_3top_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/top_button"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/big_top_image"
        android:text="@string/verify"
        />
     
     <Button
         android:id="@+id/lbot_below_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:text="@string/back"/>
     
      <Button 
        android:id="@+id/rbot_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/save_settings"
        />
      <ImageView
        android:id="@+id/small_bot_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/rbot_button"
        android:layout_alignTop="@id/rbot_button"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/hello_world"
        />

</RelativeLayout>
